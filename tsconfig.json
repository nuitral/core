{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "allowImportingTsExtensions": false
  },
  "include": ["lib/**/*"],
  "exclude": ["demo", "dist"]
}
